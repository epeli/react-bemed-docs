{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
